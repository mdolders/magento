    <checkout_multishipping_customer_address>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/PostNL/ajax.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/PostNL/postcodecheck.js</file>
            </action>
            <action method="addItem">
